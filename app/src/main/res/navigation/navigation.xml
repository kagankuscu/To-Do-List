<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/onBoardFragment">
    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.kagan.to_dolist.ui.CategoryFragment"
        android:label="TodoListFragment">
        <action
            android:id="@+id/action_todoListFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.kagan.to_dolist.ui.TaskFragment"
        android:label="{taskName}"
        tools:layout="@layout/fragment_task">
        <argument
            android:name="category"
            app:argType="com.kagan.to_dolist.enums.CategoryType" />
        <argument
            android:name="taskName"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="userName"
            app:argType="string" />
        <action
            android:id="@+id/action_taskFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.kagan.to_dolist.ui.NewTaskFragment"
        android:label="{title}">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="taskId"
            app:argType="long" />
        <argument
            android:name="category"
            app:argType="com.kagan.to_dolist.enums.CategoryType" />
    </fragment>
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.kagan.to_dolist.ui.OnBoardFragment"
        android:label="OnBoardFragment">
        <action
            android:id="@+id/action_onBoardFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
    </fragment>
</navigation>