<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        android:theme="@style/Theme.MaterialComponents.Light">

        <ImageView
            android:id="@+id/ivCategoryColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/task_cv_padding">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/task_radio_cv_margin_start"
                android:contentDescription="@string/check"
                android:src="@drawable/ic_radio_button_unchecked"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/ivCheck"
                app:layout_constraintEnd_toEndOf="@id/guideLineTaskText"
                app:layout_constraintStart_toEndOf="@id/ivCheck"
                app:layout_constraintTop_toTopOf="@id/ivCheck" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineTaskText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/guideline_task_text" />

            <TextView
                android:id="@+id/tvTaskDesc"
                android:layout_width="@dimen/task_decs_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/task_cv_margin_start"
                android:textColor="@color/task_desc_text"
                android:textSize="@dimen/card_view_category_name_text_size"
                app:layout_constraintBottom_toBottomOf="@+id/tvTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideLineTaskText"
                app:layout_constraintTop_toTopOf="@id/tvTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
